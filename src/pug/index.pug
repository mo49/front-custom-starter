extends /layout/_DefaultLayout

prepend ConfigBlock
  - page_name = ''

//- append StylesheetBlock

//- prepend JavascriptBlock

block ContentBlock
  - const encode_description = encodeURIComponent(description);
  - const encode_twitter_description = encodeURIComponent(twitter_description);
  - const encode_hashtag = encodeURIComponent(hashtag);
  - const encode_url = encodeURIComponent(url);

  .page-root(data-page='top')
    .wrapper

      include ./partial/_header
      include ./partial/_gnav

      #top.section-block
        .content-block
          .box
          .box.sp-none

      #about.section-block
        .content-block
          .box
          .box.sp-none

      include ./partial/_footer
      include ./partial/_socialButton
      include ./partial/_socialScript

      include ./partial/_youtubeModal
      include ./partial/_soundCheckModal
      include ./partial/_initialVisitModal

      .youtube__box01
        #ytplayer1
        .youtubeStartButton.js-youtube01StartButton
        .youtubeStopButton.js-youtube01StopButton
      .youtube__box02
        #ytplayer2
        .youtubeStartButton.js-youtube02StartButton
        .youtubeStopButton.js-youtube02StopButton

      button.js-modal-open(data-modal="sound-check") SoundCheck Modal Button
      button.js-modal-open(data-modal="youtube") Youtube Modal Button

      button.js-gototopButton GO TO TOP

      .js-facebookButton


  #loading

  #preload(data-preload='1')
    - for (var i = 1; i <= 2; i++) {
      div(class=`preload__image--${i}`)
    - }
